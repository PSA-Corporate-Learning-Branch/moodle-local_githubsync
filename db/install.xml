<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/githubsync/db" VERSION="2026020901" COMMENT="GitHub Sync plugin tables">
  <TABLES>
    <TABLE NAME="local_githubsync_config" COMMENT="Per-course GitHub sync configuration">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="FK to course.id"/>
        <FIELD NAME="repo_url" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="GitHub repository URL"/>
        <FIELD NAME="pat_encrypted" TYPE="text" NOTNULL="true" COMMENT="Encrypted Personal Access Token"/>
        <FIELD NAME="branch" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="main" COMMENT="Branch to sync from"/>
        <FIELD NAME="last_sync_sha" TYPE="char" LENGTH="40" NOTNULL="false" COMMENT="Last synced commit SHA"/>
        <FIELD NAME="last_sync_time" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Unix timestamp of last sync"/>
        <FIELD NAME="auto_sync" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="Enable auto-sync"/>
        <FIELD NAME="created_by" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="FK to user.id"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid_fk" TYPE="foreign-unique" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_githubsync_mapping" COMMENT="Maps repo files to Moodle course modules">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="FK to course.id"/>
        <FIELD NAME="repo_path" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="File path within repo"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="FK to course_modules.id"/>
        <FIELD NAME="sectionid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="FK to course_sections.id"/>
        <FIELD NAME="content_hash" TYPE="char" LENGTH="40" NOTNULL="false" COMMENT="SHA1 of synced content"/>
        <FIELD NAME="itemid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Sub-item ID (e.g. lesson_pages.id)"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid_fk" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="courseid_repopath" UNIQUE="true" FIELDS="courseid,repo_path"/>
        <INDEX NAME="cmid_itemid" UNIQUE="false" FIELDS="cmid,itemid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_githubsync_log" COMMENT="Sync operation log">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="FK to course.id"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User who triggered sync"/>
        <FIELD NAME="commit_sha" TYPE="char" LENGTH="40" NOTNULL="false" COMMENT="Commit SHA synced"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" COMMENT="success/failed/partial"/>
        <FIELD NAME="summary" TYPE="text" NOTNULL="false" COMMENT="Human-readable summary"/>
        <FIELD NAME="details" TYPE="text" NOTNULL="false" COMMENT="JSON log of operations"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid_fk" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
